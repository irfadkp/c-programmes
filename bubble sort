Program 1

aAIM : Program to execute an element into an array 
	


//Bubble sort

#include<stdio.h>
void main()
{
int a[100],i,j,t,n;
printf("Enter limit : ");
scanf("%d",&n);
printf("Enter the elements :  ");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
printf("Entered aray is : ");
for(i=0;i<n;i++)
{
printf("%d  ",a[i]);
}

for(i=0;i<(n-1);i++)
{
for(j=0;j<(n-i-1);j++)
{
if(a[j]>a[j+1])
{
t=a[j];
a[j]=a[j+1];
a[j+1]=t;
}
}
}
printf("\nSorted array is : ");
for(i=0;i<n;i++)
{
printf("%d  ",a[i]);
}
printf("\n");
}
